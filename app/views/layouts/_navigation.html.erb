<ul class="nav">
  <li>
    <%= link_to "Postit!", root_path, :class => 'brand' %>
  </li>
  <% if !logged_in? %>        
    <li>
      <%= link_to 'Register', register_path %>
    </li>
    <li> <%= link_to 'Log in', login_path %>
    </li>
  <% end %>
</ul>


<% if logged_in? %>
  <!-- Post -->
  <div class="nav_item">
    <%= link_to 'New Post', new_post_path, {class:'btn btn-success btn-samll'} %>
  </div>
<% end %> <!-- end if logged_in? -->


  <!-- Category -->
  <div class="nav_item btn-group ">
    <%= link_to '#', class: 'btn btn-default dropdown-toggle', 'data-toggle' => 'dropdown' do %>
      Categories <span class="caret"></span> 
    <% end %>
    <ul class="dropdown-menu" role="menu" >    
      <% Category.all.each do |c| %>
        <li><%= link_to c.name, category_path(c) %></li>
      <% end %>
      <li class='divider'></li>            
      <% if logged_in? && current_user.admin? %>      
      <li class='divider'></li>    
      <li>        
        <%= link_to(new_category_path) do %>
          <i class="icon-plus-sign"></i>
          New Category
        <% end %>
      </li>
      <% end %> <!-- end if logged_in? -->
    </ul>
  </div>


<% if logged_in? %>
  <!-- user profile -->
  <div class="nav_item btn-group ">
    <%= link_to '#', class: 'btn btn-default dropdown-toggle', 'data-toggle' => 'dropdown' do %>
      <%= current_user.username %> 
      <span class="caret"></span>     
    <% end %>

    <ul class="dropdown-menu" role="menu" >           
      <li><%= link_to edit_user_path(current_user.username) do %>
            <i class='icon-pencil'></i>Edit Profile
          <% end %>
      </li>
      <li><%= link_to user_path(current_user.username) do %>
            <i class='icon-user'></i>View Profile
          <% end %>
      </li>
      <li class='divider'></li>
      <li><%= link_to logout_path do %>
            <i class='icon-circle-arrow-left'></i>Log out
          <% end %>
      </li>    
    </ul>
  </div>
<% end %> <!-- end if logged_in? -->

