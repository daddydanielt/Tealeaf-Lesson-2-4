<%= render 'shared/content_title', title: 'Login'%>

<div class='well'>
  <%= form_tag  '/login' do %> <!-- non model backed form-->
    <div class='form-group' >
        <%= label_tag :username %>
        <%= text_field_tag :username, nil, class: 'form-control' %>
    </div>

    <div class='form-group' >
        <%= label_tag :password %>
        <%= password_field_tag :password, nil, class: 'form-control'%>
    </div>
    <%= submit_tag 'login', class: 'btn btn-success'%>
  <% end %>
</div>