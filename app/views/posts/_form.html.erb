<%= render 'shared/errors', errors: @post.errors %>

<%= form_for @post do |f| %>
  <div class="well">
   
    <!-- Testing -->
    <%= f.button("testets") {content_tag(:strong, 'Ask me!')}%>
    <%= f.button("testets") do %>
    <% content_tag(:strong, 'Ask me!') %>
    <% end %>


    <div class="control-group">
      <%= f.label :title %>
      <%= f.text_field :title %>
    </div>
    <div class="control-group">
      <%= f.label :description %>  
      <%= f.text_area :description, rows: 5 %>
    </div>
    <div class="control-group">
      <%= f.label :url %>  
      <%= f.url_field :url %>
    </div>

   
     
   <!-- Tetsing -->
    <div class="control-group">
    <%= f.collection_check_boxes :category_ids, Category.all, :id, :name do |cb| %>
      <% cb.label(class:"checkbox inline") do %> 
      <% cb.check_box(class: "checkbox") + cb.text %>
      <% end %>
    <% end %>
    </div>


    <%#Auto generate Submit Button%>
    <%#= f.button class:"btn btn-primary" %>
    <div class="control-group">
      <% if @post.new_record? %>     
        <%= f.submit("Create", class: 'btn btn-primary') %>
      <% else %>
        <%= f.submit("Update", class: 'btn btn-primary') %>
      <% end %>
    </div>

 

   
<% end %>





