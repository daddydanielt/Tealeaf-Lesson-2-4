<% if logged_in? %>  
<div class="pull-right">
  [<%= link_to 'edit this post', edit_post_path(@post) %>]
</div>
<% end %>

<%= link_to 'Back Posts', posts_path %>


<%= render 'shared/content_title', title: @post.title %>

<%= render @post.categories   %>

<div class="well">   
  <dt>Description:</dt>
  <dl>    
    <%= @post.description %></dl>
  <dl>    
    <strong>URL:</strong> <%= link_to("Go there.",fix_url(@post.url)) %></dl>
</div>

<div class="well">   
<h4><%= @post.comments.count %> Comments:</h4>    
<%= render 'comments/comment', comments: @post.comments, show_vote: true, show_creator: true %>
</div>

<%= render 'comments/form' %>


